menu "Analytics Module"

config ANALYTICS_MODULE
	bool "Enable complex analytics calculation module"
	default y
	help
	  Enable the analytics module for complex biomechanical calculations

config ANALYTICS_MODULE_LOG_LEVEL
	int "Analytics module log level"
	depends on ANALYTICS_MODULE && LOG
	default 2
	help
	  Sets log level for analytics module

config ANALYTICS_MODULE_STACK_SIZE
	int "Analytics module thread stack size"
	default 4096
	depends on ANALYTICS_MODULE
	help
	  Stack size for analytics processing thread

config ANALYTICS_MODULE_PRIORITY
	int "Analytics module thread priority"
	default 7
	depends on ANALYTICS_MODULE
	help
	  Priority for analytics processing thread (lower number = higher priority)

endmenu