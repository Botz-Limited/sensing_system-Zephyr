{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "device": "CORTEX-M33",
            "rtos": "Zephyr",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "interface": "swd",
            "runToEntryPoint": "main",
            "preLaunchTask": "Build Main",
            "executable": "${workspaceFolder}/build/zephyr/zephyr.elf",
            "armToolchainPath": "/opt/toolchains/zephyr-sdk-0.17.0/arm-zephyr-eabi/bin"
        },
        {
            "name": "Build Attach",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "jlink",
            "device": "CORTEX-M33",
            "rtos": "Zephyr",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "interface": "swd",
            "runToEntryPoint": "main",
            "preLaunchTask": "Build Main",
            "executable": "${workspaceFolder}/build/zephyr/zephyr.elf",
            "armToolchainPath": "/opt/toolchains/zephyr-sdk-0.17.0/arm-zephyr-eabi/bin"
        },
        {
            "name": "Local",
            "cwd": "${fileDirname}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/zephyr/zephyr.exe",
            "stopAtEntry": false,
            "launchCompleteCommand": "exec-run",
            "preLaunchTask": "Build Local",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "Device Local",
            "cwd": "${fileDirname}",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "device": "CORTEX-M33",
            "rtos": "Zephyr",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "interface": "swd",
            "preLaunchTask": "Build Local",
            "executable": "${fileDirname}/build/zephyr/zephyr.elf",
            "armToolchainPath": "/opt/toolchains/zephyr-sdk-0.17.0/arm-zephyr-eabi/bin"
        },
        {
            "type": "nrf-connect",
            "request": "launch",
            "name": "Launch build",
            "config": "${workspaceFolder}/build/",
            "runToEntryPoint": "main"
        },
        {
            "name": "MCUBoot Launch - nRF54",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/mcuboot/zephyr/mcuboot.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "device": "CORTEX-M33",
            "interface": "swd",
            "svdFile": "~/ncs/modules/hal/nordic/nrfx/mdk/nrf54l15_application.svd",
            "runToEntryPoint": "main"
        },
    ]
}
