<?xml version="1.0" encoding="UTF-8"?>
<!-- Custom GATT configuration for nRF Connect for Android -->
<!-- Place this file in your Android device at: /sdcard/Android/data/no.nordicsemi.android.mcp/files/ -->
<!-- The file should be named: gatt_configuration.xml -->
<configuration>
    <!-- Information Service -->
    <service uuid="0c372eaa-27eb-437e-bef4-775aefaf3c97" name="Sensing Information Service">
        <!-- Standard Current Time characteristic -->
        <characteristic uuid="00002a2b-0000-1000-8000-00805f9b34fb" name="Current Time">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Device Status -->
        <characteristic uuid="0c372eab-27eb-437e-bef4-775aefaf3c97" name="Device Status">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Foot Sensor Samples -->
        <characteristic uuid="0c372eaf-27eb-437e-bef4-775aefaf3c97" name="Foot Sensor Samples">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Foot Sensor Log Available -->
        <characteristic uuid="0c372eac-27eb-437e-bef4-775aefaf3c97" name="Foot Sensor Log Available">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Charge Status -->
        <characteristic uuid="0c372ead-27eb-437e-bef4-775aefaf3c97" name="Charge Status">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Foot Sensor Request ID/Path -->
        <characteristic uuid="0c372eae-27eb-437e-bef4-775aefaf3c97" name="Foot Sensor Log Path">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- BHI360 Log Available -->
        <characteristic uuid="0c372eb0-27eb-437e-bef4-775aefaf3c97" name="BHI360 Log Available">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- BHI360 Request ID/Path -->
        <characteristic uuid="0c372eb1-27eb-437e-bef4-775aefaf3c97" name="BHI360 Log Path">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- BHI360 Data Set 1 - 3D Mapping -->
        <characteristic uuid="0c372eb2-27eb-437e-bef4-775aefaf3c97" name="BHI360 3D Mapping Data">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- BHI360 Data Set 2 - Step Count -->
        <characteristic uuid="0c372eb3-27eb-437e-bef4-775aefaf3c97" name="BHI360 Step Count">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- BHI360 Data Set 3 - Linear Acceleration -->
        <characteristic uuid="0c372eb4-27eb-437e-bef4-775aefaf3c97" name="BHI360 Linear Acceleration">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- FOTA Progress -->
        <characteristic uuid="0c372eb5-27eb-437e-bef4-775aefaf3c97" name="FOTA Progress">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Activity Log Available -->
        <characteristic uuid="0c372ec2-27eb-437e-bef4-775aefaf3c97" name="Activity Log Available">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Activity Log Path -->
        <characteristic uuid="0c372ec3-27eb-437e-bef4-775aefaf3c97" name="Activity Log Path">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Secondary Device Information (Primary device only) -->
        <characteristic uuid="0c372eb6-27eb-437e-bef4-775aefaf3c97" name="Secondary Manufacturer">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="0c372eb7-27eb-437e-bef4-775aefaf3c97" name="Secondary Model">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="0c372eb8-27eb-437e-bef4-775aefaf3c97" name="Secondary Serial Number">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="0c372eb9-27eb-437e-bef4-775aefaf3c97" name="Secondary HW Revision">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="0c372eba-27eb-437e-bef4-775aefaf3c97" name="Secondary FW Revision">
            <properties read="true"/>
        </characteristic>
        
        <!-- Secondary FOTA Progress -->
        <characteristic uuid="0c372ebb-27eb-437e-bef4-775aefaf3c97" name="Secondary FOTA Progress">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <!-- Secondary File Management -->
        <characteristic uuid="0c372ebc-27eb-437e-bef4-775aefaf3c97" name="Secondary Foot Log Available">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <characteristic uuid="0c372ebd-27eb-437e-bef4-775aefaf3c97" name="Secondary Foot Log Path">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <characteristic uuid="0c372ebe-27eb-437e-bef4-775aefaf3c97" name="Secondary BHI360 Log Available">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <characteristic uuid="0c372ebf-27eb-437e-bef4-775aefaf3c97" name="Secondary BHI360 Log Path">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <characteristic uuid="0c372ec0-27eb-437e-bef4-775aefaf3c97" name="Secondary Activity Log Available">
            <properties read="true" notify="true"/>
        </characteristic>
        
        <characteristic uuid="0c372ec1-27eb-437e-bef4-775aefaf3c97" name="Secondary Activity Log Path">
            <properties read="true" notify="true"/>
        </characteristic>
    </service>
    
    <!-- Control Service -->
    <service uuid="4fd5b67f-9d89-4061-92aa-319ca786baae" name="Control Service">
        <!-- Set Time Command -->
        <characteristic uuid="4fd5b681-9d89-4061-92aa-319ca786baae" name="Set Time Command">
            <properties write="true"/>
        </characteristic>
        
        <!-- Delete Foot Log Command -->
        <characteristic uuid="4fd5b682-9d89-4061-92aa-319ca786baae" name="Delete Foot Log">
            <properties write="true"/>
        </characteristic>
        
        <!-- Delete BHI360 Log Command -->
        <characteristic uuid="4fd5b683-9d89-4061-92aa-319ca786baae" name="Delete BHI360 Log">
            <properties write="true"/>
        </characteristic>
        
        <!-- Start Activity Command -->
        <characteristic uuid="4fd5b684-9d89-4061-92aa-319ca786baae" name="Start Activity">
            <properties write="true"/>
        </characteristic>
        
        <!-- Stop Activity Command -->
        <characteristic uuid="4fd5b685-9d89-4061-92aa-319ca786baae" name="Stop Activity">
            <properties write="true"/>
        </characteristic>
        
        <!-- Trigger BHI360 Calibration -->
        <characteristic uuid="4fd5b686-9d89-4061-92aa-319ca786baae" name="Trigger BHI360 Calibration">
            <properties write="true"/>
        </characteristic>
        
        <!-- Delete Activity Log Command -->
        <characteristic uuid="4fd5b687-9d89-4061-92aa-319ca786baae" name="Delete Activity Log">
            <properties write="true"/>
        </characteristic>
        
        <!-- Secondary Device Commands (Primary device only) -->
        <characteristic uuid="4fd5b688-9d89-4061-92aa-319ca786baae" name="Delete Secondary Foot Log">
            <properties write="true"/>
        </characteristic>
        
        <characteristic uuid="4fd5b689-9d89-4061-92aa-319ca786baae" name="Delete Secondary BHI360 Log">
            <properties write="true"/>
        </characteristic>
        
        <characteristic uuid="4fd5b68a-9d89-4061-92aa-319ca786baae" name="Delete Secondary Activity Log">
            <properties write="true"/>
        </characteristic>
    </service>
    
    <!-- 3D Orientation Service -->
    <service uuid="0c372ec0-27eb-437e-bef4-775aefaf3c97" name="3D Orientation Service">
        <characteristic uuid="0c372ec1-27eb-437e-bef4-775aefaf3c97" name="3D Orientation Data">
            <properties notify="true"/>
        </characteristic>
    </service>
    
    <!-- Standard Device Information Service -->
    <service uuid="0000180a-0000-1000-8000-00805f9b34fb" name="Device Information Service">
        <characteristic uuid="00002a29-0000-1000-8000-00805f9b34fb" name="Manufacturer Name">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="00002a24-0000-1000-8000-00805f9b34fb" name="Model Number">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="00002a25-0000-1000-8000-00805f9b34fb" name="Serial Number">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="00002a27-0000-1000-8000-00805f9b34fb" name="Hardware Revision">
            <properties read="true"/>
        </characteristic>
        
        <characteristic uuid="00002a26-0000-1000-8000-00805f9b34fb" name="Firmware Revision">
            <properties read="true"/>
        </characteristic>
    </service>
    
    <!-- MCUmgr SMP Service (for firmware updates) -->
    <service uuid="8d53dc1d-1db7-4cd3-868b-8a527460aa84" name="MCUmgr SMP Service">
        <characteristic uuid="da2e7828-fbce-4e01-ae9e-261174997c48" name="SMP Characteristic">
            <properties write-without-response="true" notify="true"/>
        </characteristic>
    </service>
</configuration>