menu "SENSING"
    config HARDWARE_STRING
        string "v1.0"
        default "v1.0"
    menu "Custom Configuration Options"
    config SENSOR_FAILURE_MAX_RETRIES
        int "Maximum number of retries"
        default 5
        help
            This option sets the maximum number of retry attempts.

    config RETRY_SLEEP_TIMER
        int "Retry sleep timer (in milliseconds)"
        default 10
        help
            This option sets the sleep timer duration between retries in milliseconds.

    config MAX_PATH_LEN
        int "Max File Path Length"
        default 34
        help
           This option sets the buffer length for paths in the file system.


    config PRIMARY_DEVICE
        bool "Build as primary device (connects to phone)"
        default y
        select BT_GATT_CLIENT  # Primary needs GATT client for D2D TX

    config SECONDARY_DEVICE
        bool
        default !PRIMARY_DEVICE
        select BT_CENTRAL if !PRIMARY_DEVICE
        select BT_OBSERVER if !PRIMARY_DEVICE
        select BT_GATT_CLIENT if !PRIMARY_DEVICE
        select BT_PERIPHERAL if !PRIMARY_DEVICE   
        select BT_PRIVACY if !PRIMARY_DEVICE      

    config SENSOR_DATA_MSGQ_SIZE
        int "Sensor data message queue size"
        default 20
        range 10 50
        help
          Size of the sensor data message queue. Increased to handle
          D2D latency and ensure left/right foot data can be buffered
          until pairs are matched.

    endmenu    
        
    rsource "src/Kconfig"

endmenu

menu "Zephyr Kernel"
    source "Kconfig.zephyr"
endmenu
